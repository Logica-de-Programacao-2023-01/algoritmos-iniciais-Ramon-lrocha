package main

import "fmt"

func calculateTriangleArea(base, height float64) float64 {
    return 0.5 * base * height
}

func main() {
    base := 5.0
    height := 3.0

    area := calculateTriangleArea(base, height)

    fmt.Printf("A área do triângulo com base %.2f e altura %.2f é %.2f\n", base, height, area)
}
